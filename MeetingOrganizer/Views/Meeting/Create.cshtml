@model MeetingOrganizer.Models.tbl_Meetings

@{
    ViewBag.Title = "Create";
}

<h2>Yeni</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Yeni Toplantı</legend>
      
        <div class="editor-label">
            Toplantı Konusu
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Topic)
            @Html.ValidationMessageFor(model => model.Topic)
        </div>

        <div class="editor-label">
            Toplantı Tarihi
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">
            Başlama Saati
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartTime)
            @Html.ValidationMessageFor(model => model.StartTime)
        </div>

        <div class="editor-label">
           Bitiş Saati
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EndTime)
            @Html.ValidationMessageFor(model => model.EndTime)
        </div>

        <div class="editor-label">
           Katılımcılar
        </div>
        <div class="editor-field">
            @Html.DropDownList("ParticipantID", String.Empty)
            @Html.ValidationMessageFor(model => model.ParticipantID)
        </div>

        <p>
            <input type="submit" value="Oluştur" />
        </p>
    </fieldset>
}

<div>

    @Html.ActionLink("Back to List", "Index")
</div>

